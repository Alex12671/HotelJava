CREATE DATABASE hotel;

CREATE TABLE IF NOT EXISTS hotel.admin(
  id int NOT NULL AUTO_INCREMENT,
  user varchar(255),
  password varchar(255),
  PRIMARY KEY (id)
);

CREATE TABLE IF NOT EXISTS hotel.recepcionistas(
  User varchar(255),
  Password varchar(255),
  Nom varchar(255),
  Cognoms varchar(255),
  DNI varchar(255),
  Nacionalitat varchar(255),
  Teléfon varchar(255),
  Email varchar(255),
  Validado varchar(255),
  PRIMARY KEY (User)
);

